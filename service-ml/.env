# ==============================
# Service Configuration
# ==============================
SERVICE_NAME=service-ml
SERVICE_PORT=8004
DEBUG=true
ENVIRONMENT=development

# ==============================
# Database
# ==============================
POSTGRES_DB=ml_db
POSTGRES_USER=ml_user
POSTGRES_PASSWORD=ml_pass
DB_HOST=postgres-ml
DB_PORT=5432
DATABASE_URL=postgresql+psycopg2://ml_user:ml_pass@postgres-ml:5432/ml_db

# ==============================
# ML Configuration
# ==============================
MODEL_PATH=/app/models/malaria_model.h5
MODEL_CONFIDENCE_THRESHOLD=0.75
BATCH_SIZE=32
IMAGE_SIZE=224

# ==============================
# Redis for caching
# ==============================
REDIS_URL=redis://redis-cache:6379/0

# ==============================
# Performance
# ==============================
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30

# ==============================
# External Services URLs
# ==============================
MEDICAL_SERVICE_URL=http://service-medical:8003
API_GATEWAY_URL=http://api-gateway:8080
