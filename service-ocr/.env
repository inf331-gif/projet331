# ==============================
# Service Configuration
# ==============================
SERVICE_NAME=service-ocr
SERVICE_PORT=8005
DEBUG=true
ENVIRONMENT=development

# ==============================
# Database
# ==============================
POSTGRES_DB=ocr_db
POSTGRES_USER=ocr_user
POSTGRES_PASSWORD=ocr_pass
DB_HOST=postgres-ocr
DB_PORT=5432
DATABASE_URL=postgresql+psycopg2://ocr_user:ocr_pass@postgres-ocr:5432/ocr_db

# ==============================
# OCR Configuration
# ==============================
OCR_ENGINE=easyocr
MOTEUR_OCR_PAR_DEFAUT=EASY_OCR
DEFAULT_CONFIDENCE_THRESHOLD=0.7
MAX_IMAGE_WIDTH=2000
MAX_IMAGE_HEIGHT=2000
SUPPORTED_LANGUAGES=fr,en

# ==============================
# File Storage
# ==============================
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE_MB=5

# ==============================
# External Services URLs
# ==============================
MEDICAL_SERVICE_URL=http://service-medical:8003
API_GATEWAY_URL=http://api-gateway:8080
