# ==============================
# Service Configuration
# ==============================
SERVICE_NAME=service-blockchain
SERVICE_PORT=8002
DEBUG=true
ENVIRONMENT=development

# ==============================
# Database
# ==============================
POSTGRES_DB=blockchain_db
POSTGRES_USER=blockchain_user
POSTGRES_PASSWORD=blockchain_pass
DB_HOST=postgres-blockchain
DB_PORT=5432
DATABASE_URL=postgresql+psycopg2://blockchain_user:blockchain_pass@postgres-blockchain:5432/blockchain_db

# ==============================
# Blockchain Configuration
# ==============================
BLOCKCHAIN_NETWORK=testnet
CONTRACT_ADDRESS=0xYourContractAddress
PRIVATE_KEY=your-private-key-for-signing
GAS_LIMIT=300000
GAS_PRICE=20

# ==============================
# Security
# ==============================
SIGNATURE_TIMEOUT=300
HASH_ALGORITHM=SHA256

# ==============================
# External Services URLs
# ==============================
MEDICAL_SERVICE_URL=http://service-medical:8003
API_GATEWAY_URL=http://api-gateway:8080
